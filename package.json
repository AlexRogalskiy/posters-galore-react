{
    "name": "posters-galore-react",
    "version": "0.1.0",
    "private": true,
    "homepage": "http://marmelab.com/posters-galore-react/",
    "dependencies": {
        "data-generator-retail": "^2.9.3",
        "fakerest": "^2.1.0",
        "fetch-mock": "^7.3.6",
        "prop-types": "^15.7.2",
        "ra-data-json-server": "^2.9.4",
        "ra-data-simple-rest": "^2.9.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "predeploy": "yarn run build",
        "deploy": "gh-pages -d build",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "test:e2e:setup": "cypress install",
        "test:e2e": "cypress run --browser chrome",
        "test:e2e:open": "cypress open",
        "test:e2e:ci": "concurrently --kill-others --success=first 'yarn start --progress=false --no-info' 'yarn test:e2e'"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "react": "^16.8.6",
        "react-admin": "^2.9.4",
        "react-dom": "^16.8.6",
        "react-scripts": "^3.0.1",
        "concurrently": "^4.1.1",
        "cypress": "^3.4.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.2",
        "gh-pages": "^2.0.1",
        "prettier": "^1.18.2"
    }
}
